@model MuncipalityManagementSystem.Models.Report
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Delete Report";
}

<h1>Delete Report</h1>

<h3>Are you sure you want to delete this report?</h3>
<hr />

<dl class="row">
    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.ReportType)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.ReportType)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Details)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Details)</dd>

    <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Status)</dt>
    <dd class="col-sm-10">@Html.DisplayFor(model => model.Status)</dd>

    <dt class="col-sm-2">Citizen</dt>
    <dd class="col-sm-10">@(Model.Citizen?.FullName ?? "Not Assigned")</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="ReportID" />
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
