@model MunicipalityManagementSystem.Models.Staff
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Delete Staff";
}

<h1 class="text-danger mb-4">Delete Staff</h1>

<div class="card shadow p-4">
    <h4 class="mb-3">Are you sure you want to delete this?</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Full Name:</dt>
        <dd class="col-sm-9">@Model.FullName</dd>

        <dt class="col-sm-3">Position:</dt>
        <dd class="col-sm-9">@Model.Position</dd>

        <dt class="col-sm-3">Department:</dt>
        <dd class="col-sm-9">@Model.Department</dd>

        <dt class="col-sm-3">Email:</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Phone Number:</dt>
        <dd class="col-sm-9">@Model.PhoneNumber</dd>

        <dt class="col-sm-3">Hire Date:</dt>
        <dd class="col-sm-9">@Model.HireDate.ToShortDateString()</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="StaffID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
