@model IEnumerable<MunicipalityManagementSystem.Models.Staff>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Staff Management";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="mb-0">Staff Directory</h1>
            <p class="text-secondary mt-1">Manage and view all municipality staff members</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-person-plus"></i> Add Staff Member
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="p-4 text-center">
                    <p class="text-secondary mb-0">No staff members found. <a asp-action="Create">Add one now</a>.</p>
                </div>
            }
            else
            {
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Full Name</th>
                            <th>Position</th>
                            <th>Department</th>
                            <th>Email</th>
                            <th>Phone Number</th>
                            <th>Hire Date</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>@item.FullName</strong></td>
                                <td>@item.Position</td>
                                <td>
                                    <span class="badge badge-secondary" style="background-color: rgba(0, 35, 149, 0.15); color: #002395;">@item.Department</span>
                                </td>
                                <td><a href="mailto:@item.Email">@item.Email</a></td>
                                <td>@item.PhoneNumber</td>
                                <td>@item.HireDate.ToShortDateString()</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.StaffID" class="btn btn-sm btn-secondary" title="View details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.StaffID" class="btn btn-sm btn-primary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.StaffID" class="btn btn-sm btn-danger" title="Delete" onclick="return confirm('Are you sure?');">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
