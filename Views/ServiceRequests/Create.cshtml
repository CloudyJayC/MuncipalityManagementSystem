@model MuncipalityManagementSystem.Models.ServiceRequest
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Create Service Request";
}

<div class="container mt-4">
    <div class="card shadow-sm p-4">
        <h2 class="mb-4 text-primary">Create Service Request</h2>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="mb-3">
                <label asp-for="ServiceType" class="form-label fw-bold"></label>
                <input asp-for="ServiceType" class="form-control" placeholder="Enter service type" />
                <span asp-validation-for="ServiceType" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="RequestDate" class="form-label fw-bold"></label>
                <input asp-for="RequestDate" type="date" class="form-control" />
                <span asp-validation-for="RequestDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Status" class="form-label fw-bold"></label>
                <select asp-for="Status" class="form-select">
                    <option value="Pending">Pending</option>
                    <option value="In Progress">In Progress</option>
                    <option value="Completed">Completed</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="CitizenID" class="form-label fw-bold"></label>
                <select asp-for="CitizenID" class="form-select" asp-items="ViewBag.CitizenID"></select>
            </div>

            <button type="submit" class="btn btn-success"><i class="bi bi-plus-circle"></i> Create</button>
            <a asp-action="Index" class="btn btn-secondary ms-2"><i class="bi bi-arrow-left"></i> Back to List</a>
        </form>
    </div>
</div>
