@model MuncipalityManagementSystem.Models.Staff
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Staff Details";
}

<h1 class="mb-4">Staff Details</h1>

<div class="card shadow p-4">
    <dl class="row">
        <dt class="col-sm-3">Full Name:</dt>
        <dd class="col-sm-9">@Model.FullName</dd>

        <dt class="col-sm-3">Position:</dt>
        <dd class="col-sm-9">@Model.Position</dd>

        <dt class="col-sm-3">Department:</dt>
        <dd class="col-sm-9">@Model.Department</dd>

        <dt class="col-sm-3">Email:</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Phone Number:</dt>
        <dd class="col-sm-9">@Model.PhoneNumber</dd>

        <dt class="col-sm-3">Hire Date:</dt>
        <dd class="col-sm-9">@Model.HireDate.ToShortDateString()</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model?.StaffID" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
