@model IEnumerable<MuncipalityManagementSystem.Models.Citizen>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Citizens List";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-primary">Citizens</h2>
        <a asp-action="Create" class="btn btn-success mb-3"><i class="bi bi-person-plus"></i> Add New Citizen</a>

        <table class="table table-striped table-hover shadow-sm rounded">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.FullName)</th>
                    <th>@Html.DisplayNameFor(model => model.Address)</th>
                    <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
                    <th>@Html.DisplayNameFor(model => model.RegistrationDate)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FullName</td>
                        <td>@item.Address</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Email</td>
                        <td>@item.DateOfBirth?.ToShortDateString()</td>
                        <td>@item.RegistrationDate.ToShortDateString()</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.CitizenID" class="btn btn-primary btn-sm"><i class="bi bi-pencil"></i> Edit</a>
                            <a asp-action="Details" asp-route-id="@item.CitizenID" class="btn btn-info btn-sm"><i class="bi bi-eye"></i> Details</a>
                            <a asp-action="Delete" asp-route-id="@item.CitizenID" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?');">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
