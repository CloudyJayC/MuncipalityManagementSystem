@model IEnumerable<MuncipalityManagementSystem.Models.Report>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Reports";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-primary">Reports</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert">
                    <span>&times;</span>
                </button>
            </div>
        }

        <a asp-action="Create" class="btn btn-success mb-3"><i class="bi bi-file-earmark-plus"></i> New Report</a>

        <table class="table table-striped table-hover shadow-sm rounded">
            <thead class="table-dark">
                <tr>
                    <th>Report Type</th>
                    <th>Details</th>
                    <th>Submission Date</th>
                    <th>Status</th>
                    <th>Citizen</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ReportType</td>
                        <td>@item.Details</td>
                        <td>@item.SubmissionDate.ToShortDateString()</td>
                        <td>@item.Status</td>
                        <td>@item.Citizen?.FullName</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.ReportID" class="btn btn-warning btn-sm"><i class="bi bi-pencil"></i> Edit</a>
                            <a asp-action="Details" asp-route-id="@item.ReportID" class="btn btn-info btn-sm"><i class="bi bi-eye"></i> Details</a>
                            <a asp-action="Delete" asp-route-id="@item.ReportID" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
