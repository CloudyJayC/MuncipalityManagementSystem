@model IEnumerable<MuncipalityManagementSystem.Models.Citizen>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Citizens List";
}

<h1>Citizens</h1>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Create New Citizen</a>
</p>

<table class="table table-striped table-hover shadow-sm">
    <thead class="thead-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.FullName)</th>
            <th>@Html.DisplayNameFor(model => model.Address)</th>
            <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.DateOfBirth)</th>
            <th>@Html.DisplayNameFor(model => model.RegistrationDate)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.DateOfBirth)</td>
                <td>@Html.DisplayFor(modelItem => item.RegistrationDate)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CitizenID" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.CitizenID" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.CitizenID" class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure you want to delete this citizen?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
