@model IEnumerable<MuncipalityManagementSystem.Models.Staff>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Staff Management";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-primary">Staff Management</h2>
        <a asp-action="Create" class="btn btn-success mb-3"><i class="bi bi-person-plus"></i> Add Staff</a>

        <table class="table table-striped table-hover shadow-sm rounded">
            <thead class="table-dark">
                <tr>
                    <th>Full Name</th>
                    <th>Position</th>
                    <th>Department</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Hire Date</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FullName</td>
                        <td>@item.Position</td>
                        <td>@item.Department</td>
                        <td>@item.Email</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.HireDate.ToShortDateString()</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.StaffID" class="btn btn-primary btn-sm"><i class="bi bi-pencil"></i> Edit</a>
                            <a asp-action="Details" asp-route-id="@item.StaffID" class="btn btn-info btn-sm"><i class="bi bi-eye"></i> Details</a>
                            <a asp-action="Delete" asp-route-id="@item.StaffID" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
