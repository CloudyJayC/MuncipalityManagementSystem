@model MuncipalityManagementSystem.Models.ServiceRequest
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Service Request Details";
}

<div class="container mt-4">
    <div class="card shadow-sm p-4">
        <h2 class="text-primary">Service Request Details</h2>

        <table class="table table-striped mt-3">
            <tr>
                <th>Service Type</th>
                <td>@Model.ServiceType</td>
            </tr>
            <tr>
                <th>Request Date</th>
                <td>@Model.RequestDate.ToShortDateString()</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>@Model.Status</td>
            </tr>
            <tr>
                <th>Citizen Address</th>
                <td>@Model.Citizen?.Address</td>
            </tr>
        </table>

        <a asp-action="Edit" asp-route-id="@Model?.RequestID" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Edit</a>
        <a asp-action="Index" class="btn btn-secondary ms-2"><i class="bi bi-arrow-left"></i> Back to List</a>
    </div>
</div>
