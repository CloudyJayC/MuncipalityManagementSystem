@model IEnumerable<MuncipalityManagementSystem.Models.Report>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Reports Management";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="mb-0">Reports</h1>
            <p class="text-secondary mt-1">View and manage all generated reports</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-file-earmark-plus"></i> New Report
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="p-4 text-center">
                    <p class="text-secondary mb-0">No reports found. <a asp-action="Create">Create one now</a>.</p>
                </div>
            }
            else
            {
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Report Type</th>
                            <th>Citizen</th>
                            <th>Details</th>
                            <th>Submission Date</th>
                            <th>Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>@item.ReportType</strong></td>
                                <td>@item.Citizen?.FullName</td>
                                <td><span class="text-secondary">@(item.Details?.Length > 50 ? item.Details.Substring(0, 50) + "..." : item.Details)</span></td>
                                <td>@item.SubmissionDate.ToShortDateString()</td>
                                <td>
                                    @if (item.Status?.ToLower() == "completed")
                                    {
                                        <span class="badge badge-success">@item.Status</span>
                                    }
                                    else if (item.Status?.ToLower() == "pending")
                                    {
                                        <span class="badge badge-warning">@item.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">@item.Status</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.ReportID" class="btn btn-sm btn-secondary" title="View details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.ReportID" class="btn btn-sm btn-primary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.ReportID" class="btn btn-sm btn-danger" title="Delete" onclick="return confirm('Are you sure?');">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
