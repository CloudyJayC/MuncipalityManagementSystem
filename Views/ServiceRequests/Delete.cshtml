@model MuncipalityManagementSystem.Models.ServiceRequest
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewData["Title"] = "Delete Service Request";
}

<div class="container mt-4">
    <div class="card shadow-sm p-4">
        <h2 class="text-danger">Delete Service Request</h2>
        <p class="lead">Are you sure you want to delete this request?</p>

        <table class="table table-bordered mt-3">
            <tr>
                <th>Service Type</th>
                <td>@Model.ServiceType</td>
            </tr>
            <tr>
                <th>Request Date</th>
                <td>@Model.RequestDate.ToShortDateString()</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>@Model.Status</td>
            </tr>
            <tr>
                <th>Citizen Address</th>
                <td>@Model.Citizen?.Address</td>
            </tr>
        </table>

        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="RequestID" />
            <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
            <a asp-action="Index" class="btn btn-secondary ms-2"><i class="bi bi-arrow-left"></i> Back to List</a>
        </form>
    </div>
</div>
