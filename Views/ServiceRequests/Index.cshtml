@model IEnumerable<MuncipalityManagementSystem.Models.ServiceRequest>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Service Requests";
}

<div class="container mt-4">
    <div class="card shadow-lg p-4">
        <h2 class="text-primary">Service Requests</h2>
        <a asp-action="Create" class="btn btn-success mb-3"><i class="bi bi-plus-circle"></i> Create New</a>

        <table class="table table-striped table-hover shadow-sm rounded">
            <thead class="table-dark">
                <tr>
                    <th>Service Type</th>
                    <th>Request Date</th>
                    <th>Status</th>
                    <th>Citizen Address</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ServiceType</td>
                        <td>@item.RequestDate.ToShortDateString()</td>
                        <td>@item.Status</td>
                        <td>@item.Citizen?.Address</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.RequestID" class="btn btn-warning btn-sm"><i class="bi bi-pencil"></i> Edit</a>
                            <a asp-action="Details" asp-route-id="@item.RequestID" class="btn btn-info btn-sm"><i class="bi bi-eye"></i> Details</a>
                            <a asp-action="Delete" asp-route-id="@item.RequestID" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
