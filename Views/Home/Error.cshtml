@{
    ViewData["Title"] = "Error";
    var requestId = ViewData["RequestId"]?.ToString() ?? "Unknown";
}

<div class="error-container text-center py-5">
    <div class="card border-danger">
        <div class="card-body">
            <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 3rem;"></i>
            <h1 class="card-title mt-3">Oops! An Error Occurred</h1>
            <p class="card-text text-muted">We apologize for the inconvenience. An unexpected error occurred while processing your request.</p>

            @if (!string.IsNullOrEmpty(ViewData["ErrorMessage"]?.ToString()))
            {
                <div class="alert alert-danger mt-3">
                    <strong>Error Details:</strong>
                    <p>@ViewData["ErrorMessage"]</p>
                </div>
            }

            <div class="alert alert-info mt-3">
                <small class="text-muted">
                    <strong>Request ID:</strong> <code>@requestId</code><br />
                    <em>Please include this ID if you need to report this error.</em>
                </small>
            </div>

            <div class="mt-4">
                <a class="btn btn-primary" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-fill"></i> Return to Home
                </a>
                <button class="btn btn-secondary" onclick="history.back()">
                    <i class="bi bi-arrow-left"></i> Go Back
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Log error to console for debugging (development only)
        console.warn('Error occurred with Request ID: @requestId');
    </script>
}
