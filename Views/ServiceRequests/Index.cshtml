@model IEnumerable<MunicipalityManagementSystem.Models.ServiceRequest>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Service Requests Management";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="mb-0">Service Requests</h1>
            <p class="text-secondary mt-1">Track and manage all citizen service requests</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> New Request
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body p-0">
            @if (!Model.Any())
            {
                <div class="p-4 text-center">
                    <p class="text-secondary mb-0">No service requests found. <a asp-action="Create">Create one now</a>.</p>
                </div>
            }
            else
            {
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Service Type</th>
                            <th>Request Date</th>
                            <th>Status</th>
                            <th>Citizen Address</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>@item.ServiceType</strong></td>
                                <td>@item.RequestDate.ToShortDateString()</td>
                                <td>
                                    @if (item.Status?.ToLower() == "completed")
                                    {
                                        <span class="badge badge-success">@item.Status</span>
                                    }
                                    else if (item.Status?.ToLower() == "pending")
                                    {
                                        <span class="badge badge-warning">@item.Status</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">@item.Status</span>
                                    }
                                </td>
                                <td>@item.Citizen?.Address</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Details" asp-route-id="@item.RequestID" class="btn btn-sm btn-secondary" title="View details">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.RequestID" class="btn btn-sm btn-primary" title="Edit">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.RequestID" class="btn btn-sm btn-danger" title="Delete" onclick="return confirm('Are you sure?');">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>
